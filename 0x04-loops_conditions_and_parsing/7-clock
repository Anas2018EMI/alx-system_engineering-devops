#!/usr/bin/env bash
# Displays "Best School" 10 times using a while loop.

# Initialize hour counter
hour=0

# While loop for hours (0-12)
while [ $hour -le 12 ]
do
    echo "Hour: $hour"

    # Initialize minute counter
    minute=1

    # While loop for minutes (1-59)
    while [ $minute -le 59 ]
    do
        echo "$minute"
        # Increment minute
        minute=$((minute + 1))
    done

    # Increment hour
    hour=$((hour + 1))
done
